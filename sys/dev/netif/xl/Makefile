# $DragonFly: src/sys/dev/netif/xl/Makefile,v 1.6 2008/06/25 11:46:03 sephe Exp $

KMOD	= if_xl
SRCS	= if_xl.c device_if.h bus_if.h pci_if.h
SRCS	+= opt_polling.h opt_ethernet.h
SRCS	+= miibus_if.h
KMODDEPS = miibus

.ifndef BUILDING_WITH_KERNEL
opt_polling.h:
	echo '#define DEVICE_POLLING 1' > ${.OBJDIR}/${.TARGET}

opt_ethernet.h:
	touch ${.OBJDIR}/${.TARGET}
.endif

.include <bsd.kmod.mk>
