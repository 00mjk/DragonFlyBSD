# Makefile for the fwe(4) module (Ethernet over IEEE1394)

KMOD=	if_fwe
SRCS=	if_fwe.c
SRCS+=	bus_if.h device_if.h opt_inet.h opt_polling.h

.ifndef BUILDING_WITH_KERNEL
opt_polling.h:
	echo '#define DEVICE_POLLING 1' > ${.OBJDIR}/${.TARGET}
.endif

KMODDEPS=	firewire

.include <bsd.kmod.mk>
