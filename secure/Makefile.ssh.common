SSHDIR=		${.CURDIR}/../../../crypto/openssh-3.8.1p1

CONTRIBDIR=	${SSHDIR}

CFLAGS+=	-I${.CURDIR}/../../lib/libssh -I${SSHDIR}

NOLINT=	true

.if ${.CURDIR:T} != "libssh"
DPADD+=	${LIBSSH}
LDADD+=	-lssh
.endif

DPADD+=	${LIBCRYPTO}
LDADD+=	-lcrypto

.PATH:	${SSHDIR}
