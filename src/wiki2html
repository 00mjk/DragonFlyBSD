#!/bin/sh
#
# $DragonFly: site/src/wiki2html,v 1.2 2005/01/15 08:48:34 dillon Exp $

cat << EOF
#!/usr/local/www/cgi-bin/tablecg
#
# \$DragonFly\$

\$TITLE(DragonFly Frequently Asked Questions)

EOF

#
# 1. Extract content section from downloaded page.
# 2. Delete table of contents section.
# 3. Remove URLs to edit links.
# 4. Convert <h1> tags to bold.
#
sed	-e '1,/<!-- start content -->/d' \
        -e '/<!-- end content -->/,$d' \
        -e '/<table border="0" id="toc">/,/<\/table>/d' \
        -e 's,^<div class="editsection" style="float:right;margin-left:5px;">.*<\/div>,,' \
        -e 's/<h1>/<b>/g' \
        -e 's/<\/h1>/<\/b>/g' \
	-e 's,dfwiki/index.php/DragonFly_FAQ\([^"]*\)",main/FAQ\1.cgi",g'

