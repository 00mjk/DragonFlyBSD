#!/bin/sh
#
# $DragonFly: src/etc/rc.d/ftpd,v 1.1 2005/10/28 18:00:28 joerg Exp $
#

# PROVIDE: ftpd
# REQUIRE: DAEMON
# BEFORE:  LOGIN
# KEYWORD: DragonFly

. /etc/rc.subr

name="ftpd"
rcvar=`set_rcvar`
pidfile="/var/run/${name}.pid"
command="/usr/libexec/${name}"
command_args="-D -p $pidfile"

load_rc_config $name
run_rc_command "$1"
